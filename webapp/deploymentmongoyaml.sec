apiVersion: apps/v1
kind: Deployment
metadata:
  name: mongo-app
  labels:
    app: mongo-app
spec:
  replicas: 1
  selector:
    matchLabels:
       app: mymongo-app
  template:
    metadata:
      labels:
        app: mymongo-app
    spec:
      containers:
      - name: mongo-app
        image: mongo
        ports:
          - containerPort: 8080
            name: web-port

